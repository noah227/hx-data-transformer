{
    "id": "noahyoung-hx-data-transformer",
    "name": "hx-data-transformer",
    "description": "一键花式变换，详见说明",
    "displayName": "一键变换",
    "version": "0.1.3",
    "publisher": "Noah Young",
    "engines": {
        "HBuilderX": "^3.2.22"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension",
    "scripts": {
        "build:transformer": "rollup -c rollup.config.transformer.js",
        "build:main": "rollup -c rollup.config.main.js",
        "build": "npm run build:transformer && npm run build:main",
        "pack": "node hx-pack.js"
    },
    "keywords": [
        "风格",
        "驼峰",
        "二维码"
    ],
    "activationEvents": [
        "onCommand:extension.toObject",
        "onCommand:extension.toArray",
        "onCommand:extension.changeCase",
        "onCommand:extension.changeCaseAnyway",
        "onCommand:extension.toQrCode",
        "onCommand:extension.toQrCodeWithGUI",
        "onCommand:extension.encodeAndDecode",
        "onCommand:extension.objectJsonfied",
        "onCommand:extension.configuration"
    ],
    "contributes": {
        "commands": [{
                "command": "extension.toObject",
                "title": "变对象"
            },
            {
                "command": "extension.toArray",
                "title": "变数组"
            },
            {
                "command": "extension.changeCase",
                "title": "变风格"
            },
            {
                "command": "extension.changeCaseAnyway",
                "title": "变风格（任意变换）"
            },
            {
                "command": "extension.toQrCode",
                "title": "变二维码"
            },
            {
                "command": "extension.toQrCodeWithGUI",
                "title": "变二维码（GUI）"
            },
            {
                "command": "extension.encodeAndDecode",
                "title": "编码/解码（URI）"
            },
            {
                "command": "extension.reverseLineComment",
                "title": "注释反转"
            },
            {
                "command": "extension.objectJsonfied",
                "title": "对象json修正"
            },
            {
                "command": "extension.configuration",
                "title": "配置项"
            }
        ],
        "menus": {
            "editor/context": [{
                    "id": "transformer",
                    "title": "一键变换",
                    "group": "assist"
                },
                {
                    "command": "extension.toObject",
                    "group": "transformer@1",
                    "when": "editorHasSelection"
                },
                {
                    "command": "extension.toArray",
                    "group": "transformer@2",
                    "when": "editorHasSelection"
                },
                {
                    "command": "extension.changeCase",
                    "group": "transformer@3",
                    "when": "editorHasSelection"
                },
                {
                    "command": "extension.changeCaseAnyway",
                    "group": "transformer@3",
                    "when": "editorHasSelection"
                },
                {
                    "command": "extension.toQrCode",
                    "group": "transformer@4",
                    "when": "editorHasSelection"
                },
                {
                    "command": "extension.toQrCodeWithGUI",
                    "group": "transformer@5",
                    "when": "editorHasSelection"
                },
                {
                    "command": "extension.encodeAndDecode",
                    "group": "transformer@6",
                    "when": "editorHasSelection"
                },
                {
                    "command": "extension.objectJsonfied",
                    "group": "transformer@7",
                    "when": "editorHasSelection"
                },
                {
                    "command": "extension.reverseLineComment",
                    "group": "transformer@8",
                    "when": "editorHasSelection && langId =~ /javascript|typescript|coffeescript/"
                },
                {
                    "command": "extension.configuration",
                    "group": "transformer@9",
                    "when": "editorTextFocus"
                },
                {
                    "group": "z_commands"
                }
            ]
        }
    },
    "extensionDependencies": [
        "plugin-manager"
    ],
    "dependencies": {
        "@rollup/plugin-json": "^6.0.0",
        "change-case": "^4.1.2",
        "clipboard-sys": "^1.2.1",
        "copy-paste": "^1.5.3",
        "qrcode": "^1.5.3"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^24.1.0",
        "@rollup/plugin-node-resolve": "^15.0.2",
        "@rollup/plugin-terser": "^0.4.3",
        "@rollup/plugin-typescript": "^11.1.0",
        "@types/node": "^20.3.3",
        "cozip": "^0.1.1",
        "fs-extra": "^11.1.1",
        "rollup": "^3.23.0",
        "tslib": "^2.5.2",
        "typescript": "^5.0.4"
    }
}